<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/orange</item>
    </style>

    <style name="buttonQuestio2">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/purple</item>
        <item name="strokeWidth">8dp</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="buttonQuestion">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/orange</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/purple</item>
    </style>

    <style name="buttonBack">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/purple</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

</resources>